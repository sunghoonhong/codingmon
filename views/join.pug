extends layout

block content
  if !joinType
    h2= 'Select Join Type'
    .jointype
      form#join_type(action='/join', method='post')
        .input-group
          label(for='joinType') 가입 유형
          select(name='joinType', id='joinType', required)
            option(value='freelancer') 프리랜서
            option(value='client') 의뢰자
        button#join.btn(type='submit') 가입
        if joinError
          .error-message= joinError


  else if joinType=='freelancer'
    h2= 'Freelancer Join'
    form#join-form(action='/auth/join/freelancer' method='post')
      .input-group
        label(for='id') ID
        input#id(type='id' name='id' required autofocus)
      .input-group
        label(for='pw') 비밀번호
        input#pw(type='pw' name='pw' required)
      .input-group
        label(for='name') 이름
        input#pw(type='name' name='name' required)
      .input-group
        label(for='phone_num') 휴대폰 번호
        input#pw(type='phone_num' name='phone_num' required)
      .input-group
        label(for='age') 나이
        input#pw(type='age' name='age' required)
      .input-group
        label(for='major') 전공
        input#pw(type='major' name='major' required)  
      .input-group
        label(for='career') 경력
        input#pw(type='career' name='career' required)
      button#join.btn(type='submit') 가입
      if joinError
        .error-message= joinError
    
    h2 언어별능숙도 해야함!

  else if joinType=='client'
    h2= 'Client Join'
    form#join-form(action='/auth/join/client' method='post')
      .input-group
        label(for='id') ID
        input#id(type='id' name='id' required autofocus)
      .input-group
        label(for='pw') 비밀번호
        input#pw(type='pw' name='pw' required)
      .input-group
        label(for='name') 이름
        input#pw(type='name' name='name' required)
      .input-group
        label(for='phone_num') 휴대폰 번호
        input#pw(type='phone_num' name='phone_num' required)
      button#join.btn(type='submit') 가입
        if joinError
          .error-message= joinError